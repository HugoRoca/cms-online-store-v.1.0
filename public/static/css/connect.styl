body
    background-color:  #f6f6f6
    margin 0
    font-size: 14px

.mtop16
    margin-top: 16px

.box
    background-color: #fff
    border-radius: 8px
    border: 1px solid #d6d6d6
    position absolute
    width: 500px
    .btn-success
        background-color: #E85722
        border: 0
        width: 100%
    .form-control
        &:focus
        &:active
            outline: none
            shadow: none
    .inside
        padding: 16px
    .header
        background-color: #003e73
        border-radius: 8px 8px 0px 0px
        padding: 16px
        a
            img
                width: 65%
                display: block
                margin: 0px auto
    .footer
        text-align: center
        color: #003e73
        a
            display: inline-block
            font-size: .8em
            &:last-child
                margin-left: 30px
.box_login
    left: calc(50% - 250px)
    top: calc(50% - 250px)
